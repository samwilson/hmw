{% set commons = commons(shortcode.attrs.1) %}

<figure itemscope itemtype="http://schema.org/ImageObject" class="figure">
    <a href="{{ commons.imageinfo.0.descriptionurl|escape('html_attr') }}" title="View on Wikimedia Commons">
        <img src="{{ commons.imageinfo.0.thumburl|escape('html_attr') }}"
             width="{{ commons.imageinfo.0.thumbwidth }}"
             height="{{ commons.imageinfo.0.thumbheight }}"
             itemprop="contentUrl"
             alt="{{ commons.labels.en.value|escape('html_attr') }}"
             class="figure-img img-fluid"
        />
    </a>
    <figcaption itemprop="caption" class="figure-caption">
        {{ commons.labels.en.value }}
        (via <a href="{{ commons.imageinfo.0.descriptionurl|escape('html_attr') }}">Wikimedia Commons</a>)
    </figcaption>
</figure>
